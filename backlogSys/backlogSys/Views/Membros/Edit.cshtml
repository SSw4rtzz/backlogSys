@model backlogSys.Models.MembrosEquipa

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Membros</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Efetividade" class="control-label"></label>
                <select asp-for="Efetividade" class="form-control">
                    <option value="">Seleciona uma opção</option>
                    <option value="Sim">Contrato/Efetivo</option>
                    <option value="Não">Estagiário</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label"></label>
                <input type="file" name="foto" class="form-control" accept=".jpg,.png" />
            </div>
            <div class="form-group">
                <label asp-for="EquipaFK" class="control-label"></label>
                <input asp-for="EquipaFK" class="form-control" />

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model IEnumerable<backlogSys.Models.MembrosEquipa>

@{
    ViewData["Title"] = "Index";

}

<link href="../Assets/style.css" type="text/css" rel="stylesheet">
<script src="../Assets/script.js"></script>

<h1>Página de Membros</h1>

@if (User.Identity.IsAuthenticated) {
        <p>
            <a asp-action="Create">Adicionar novo Membro</a>
        </p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Efetividade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EquipaFK)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Efetividade)
                </td>
                <td>
                    <a href="~/Fotos/@item.Foto" target="_blank">
                        <img src="~/Fotos/@item.Foto" alt="Fotografia do Empregado @Html.DisplayFor(modelItem => item.Nome)"
                             title="@item.Nome" height="50" />
                        
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EquipaFK)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
}
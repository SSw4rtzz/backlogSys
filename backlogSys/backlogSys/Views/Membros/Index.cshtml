@model IEnumerable<backlogSys.Models.MembrosEquipa>

@{
    ViewData["Title"] = "Index";
}

<h1>Página de Membros TESTE</h1>

<p>
    <a asp-action="Create">Adicionar novo Membro</a>
</p>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Efetividade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EquipaFK)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            @* Model -> representa a lista de médicos veterinários enviados para a View *@
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Efetividade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Foto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EquipaFK)
                </td>
            </tr>
        }
    </tbody>
</table>

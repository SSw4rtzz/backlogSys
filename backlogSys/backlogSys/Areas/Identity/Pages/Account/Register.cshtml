@page
@model RegisterModel
@{
    ViewData["Title"] = "Registar novo Membro";
}

<h1>@ViewData["Title"]</h1>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email"></label>
                     </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.Password"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.ConfirmPassword"></label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-floating">
                        <input asp-for="Input.Membros.Nome" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Membros.Nome"></label>
                        <span asp-validation-for="Input.Membros.Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <select asp-for="Input.Membros.Efetividade" class="form-control">
                            <option value="">Efetividade</option>
                            <option value="Sim">Contrato/Efetivo</option>
                            <option value="Nao">Estagiário</option>
                        </select>
                        <span asp-validation-for="Input.Membros.Efetividade" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Membros.EquipaFK" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Membros.EquipaFK"></label>
                        <span asp-validation-for="Input.Membros.EquipaFK" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <br />
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registar</button>
                </div>
            </div>
        </form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
